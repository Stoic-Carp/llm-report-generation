# =================================================================
# BMW Sales Analysis - Environment Configuration
# =================================================================

# -------------------------
# Application Settings
# -------------------------
APP_NAME="BMW Sales LLM Analysis"
ENVIRONMENT=development
DEBUG=false

# -------------------------
# LLM Configuration
# -------------------------
LLM_PROVIDER=ollama
LLM_MODEL=granite4:latest
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=120

# Ollama
LLM_OLLAMA_HOST=http://localhost:11434

# API Keys (use vault or secrets manager in production)
LLM_GEMINI_API_KEY=
LLM_ANTHROPIC_API_KEY=
LLM_OPENAI_API_KEY=

# -------------------------
# Data Settings
# -------------------------
DATA_DATA_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_HANDLE_MISSING=error

# -------------------------
# Visualization Settings
# -------------------------
VIZ_OUTPUT_DIR=outputs/plots
VIZ_DPI=300
VIZ_FORMAT=png
VIZ_STYLE=seaborn-v0_8
VIZ_MIN_PLOTS=4
VIZ_MAX_PLOTS=8

# -------------------------
# Report Settings
# -------------------------
REPORT_OUTPUT_DIR=outputs/reports
REPORT_GENERATE_PDF=true
REPORT_GENERATE_HTML=true
REPORT_GENERATE_WORD=true
REPORT_GENERATE_MARKDOWN=true
REPORT_COMPANY_NAME="BMW Sales Analysis"
REPORT_AUTHOR="AI-Powered Analytics"

# -------------------------
# Evaluation Settings
# -------------------------
EVAL_ENABLED=true
EVAL_OUTPUT_DIR=outputs/evaluation
EVAL_MIN_COVERAGE_SCORE=0.8
EVAL_USE_LLM_JUDGE=true

# -------------------------
# Logging Settings
# -------------------------
LOG_LEVEL=INFO
LOG_DIR=outputs/logs
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# -------------------------
# Streamlit Settings
# -------------------------
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501
STREAMLIT_LAYOUT=wide
STREAMLIT_PAGE_TITLE="BMW Sales Analysis"
STREAMLIT_CACHE_TTL=3600
